{% extends 'base.html.twig' %}

{% block body %}
    <h1> Job Description </h1>
    {% if (app.user is not null) %}
        {% if app.user.checkConcern(job)  %}
            <a href="{{ path('job_remove_interest', {'job': job.id}) }}"  class="btn btn-warning remove-interest-job" /> Give Up </a>
        {% else %}
            <a href="{{ path('job_add_interest', {'job': job.id}) }}"  class="btn btn-primary add-interest-job" /> I born for IT </a>
        {% endif %}
    {% endif %}
    <h3>{{ job.title }}</h3>
    <br>
    <h4><a href="{{ path('job_index') }}">Back to list Jobs</a> </h4>
{% endblock %}


