{% extends 'base.html.twig' %}

{% block body %}
    <h1>Jobs list</h1>

    <table class="table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Createdby</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td><a href="{{ path('job_show', { 'slug': job.slug }) }}">{{ job.id }}</a></td>
                <td>{{ job.title }}</td>
                <td>{{ job.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('job_show', { 'slug': job.slug }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('job_edit', { 'slug': job.slug }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('job_new') }}">Create a new job</a>
        </li>
    </ul>
{% endblock %}
